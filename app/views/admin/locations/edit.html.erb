<%= form_for [:admin, @location] do |f| %>
  <table id="show-camp-table">
    <tr>
      <th><%= f.label "ID" %></th>
      <td><%= @location.id %></td>
    </tr>
    <tr>
      <th><%= f.label "Location" %></th>
      <td><%= f.text_field :location, autofocus: true, required: true %></td>
    </tr>
  </table>

  <%= f.submit "Update", disable_with: 'Updating...' %>
<% end %>

<%= link_to "Back", admin_locations_path %>
