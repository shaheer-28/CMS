<%= render 'progress' %>

<p>
  <%= form_for @camps_registration, url: wizard_path, method: :put do |f| %>
    <%= f.label "Select the activity of your interest:" %>
    <p><%= f.select :activity_of_interest, @activities_dropdown_list %></p>
    <%= f.submit "Save Changes", class: "btn btn-primary" %>
  <% end %>
</p>

<div class="row">
  <div class="col-sm-2">
    <%= link_to "Back", previous_wizard_path %>
  </div>
  <div class="col-sm-9"></div>
  <div class="col-sm-1">
    <%= link_to 'skip', next_wizard_path %>
  </div>
</div>
